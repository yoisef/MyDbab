<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/recycletoclick"
    android:layoutDirection="rtl"
  >

    <ImageView
        android:layout_width="50dp"
        android:layout_margin="10dp"
        android:id="@+id/imgid"
        android:layout_alignParentTop="true"

        android:layout_height="50dp"
        android:src="@drawable/coffe"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_toLeftOf="@id/imgid"
            android:id="@+id/marketname"
            android:text="كافية لاتيه"

            android:layout_marginTop="10dp"
            android:textColor="@color/blue"
            android:textSize="@dimen/big"
            android:layout_height="wrap_content" />
        <TextView
            android:layout_width="wrap_content"
            android:textSize="@dimen/xsmall"
            android:layout_margin="10dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_height="wrap_content"
            android:textColor="@color/blacl"
            android:id="@+id/cancel"

            android:layout_marginTop="8dp"

            android:text="الغاء الطلب"/>

        <TextView
            android:layout_width="wrap_content"
            android:id="@+id/adress"
            android:layout_height="wrap_content"
            android:text="address"
            android:layout_below="@id/marketname"
            android:layout_toLeftOf="@id/imgid"
            android:textSize="@dimen/smaal"
            android:textColor="@color/blacl"/>

        <TextView
            android:layout_width="wrap_content"
            android:textSize="@dimen/xsmall"
            android:id="@+id/distance"
            android:layout_below="@id/adress"
            android:textColor="@color/blacl"
            android:text="2.19 كم"
            android:layout_toLeftOf="@id/imgid"
            android:layout_height="wrap_content" />
            <TextView
                android:layout_width="wrap_content"
                android:id="@+id/status"
                android:layout_marginEnd="20dp"
                android:layout_marginBottom="15dp"
                android:padding="5dp"
                android:text="جاري الانتظار...."
                android:layout_below="@id/adress"
                android:gravity="start"
                android:textSize="16sp"
             android:layout_alignParentEnd="true"
                android:layout_gravity="end"
                android:layout_height="wrap_content"
                android:textColor="@color/blacl"
                />




</RelativeLayout>