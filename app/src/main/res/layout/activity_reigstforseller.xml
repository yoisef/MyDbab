<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layoutDirection="rtl"
    android:layout_height="match_parent"
    tools:context=".LoginActivity">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:text="تسجيل البيانات"
        android:gravity="center"
        android:background="@color/blue"
        android:textStyle="bold"
        android:textColor="@color/white"
        android:layoutDirection="rtl"
        android:textSize="22sp"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight=".5"
       >
        <ImageView
            android:layout_width="wrap_content"
            android:id="@+id/line"
            android:layout_centerInParent="true"
            android:layout_height="20dp"
            android:src="@drawable/line"/>
        <ImageView
            android:layout_width="wrap_content"
            android:layout_toEndOf="@id/line"
            android:layout_centerInParent="true"
            android:layout_marginStart="5dp"
            android:layout_height="20dp"
            android:src="@drawable/line"/>
        <ImageView
            android:layout_width="wrap_content"
            android:layout_toStartOf="@id/line"
            android:layout_marginEnd="5dp"
            android:layout_centerInParent="true"
            android:layout_height="20dp"
            android:src="@drawable/lineblue"/>
    </RelativeLayout>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="6">

<LinearLayout
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="wrap_content">
    <EditText
        android:layout_width="match_parent"
        android:drawableStart="@mipmap/person"
        android:drawablePadding="5dp"
        android:hint="الأسم"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        />
    <EditText
        android:layout_width="match_parent"
        android:drawablePadding="5dp"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:hint="User@Mail.com"
        android:gravity="start"
        android:drawableStart="@mipmap/email"
        android:layout_marginTop="5dp"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"         />
    <View
        android:layout_width="match_parent"

        android:layout_height="1dp"
        android:background="@color/blacl"/>
    <EditText
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="5dp"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:layout_weight="1"
        android:hint="اسم المتجر"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layoutDirection="rtl"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:layout_marginTop="5dp"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        >
        <TextView
            android:layout_width="wrap_content"
            android:textStyle="bold"
            android:textSize="@dimen/meieum"
            android:textColor="@color/blacl"
            android:layout_height="wrap_content"
            android:text="نوع المتجر"/>
    <Spinner
        android:layout_width="match_parent"
        android:id="@+id/spinerkindmarket"

        android:layout_height="wrap_content"></Spinner>
    </LinearLayout>
    <EditText
        android:layout_width="match_parent"
        android:hint="وصف المتجر"
        android:layout_height="0dp"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:layout_weight="1"
        />
    <RelativeLayout
        android:layout_width="match_parent"
        android:layoutDirection="rtl"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:layout_marginTop="5dp"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:layout_margin="10dp"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_alignParentStart="true"
            android:textSize="@dimen/meieum"
            android:text="صورة السجل التجاري"
            android:textColor="@color/blacl"
            android:layout_height="wrap_content" />
        <ImageView
            android:layout_width="wrap_content"
            android:layout_alignParentEnd="true"
            android:src="@drawable/addimgmarket"
            android:layout_gravity="start"
            android:layout_height="wrap_content" />
    </RelativeLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_marginTop="5dp"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:layout_height="0dp"
        android:layout_weight="4"
        android:layoutDirection="rtl"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/meieum"
            android:textColor="@color/blacl"
            android:textStyle="bold"
            android:text="موقع المتجر"
            />
        <RadioGroup
            android:layout_width="match_parent"
            android:layoutDirection="rtl"
            android:orientation="vertical"
            android:layout_height="wrap_content">
            <RadioButton
                android:layout_width="wrap_content"
                android:text="استخدم موقعي"
                android:textSize="@dimen/meieum"
                android:layout_height="wrap_content" />
            <RadioButton
                android:layout_width="wrap_content"
                android:text="ابحث علي الخريطة"
                android:textSize="@dimen/meieum"
                android:layout_height="wrap_content" />
        </RadioGroup>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:layout_marginBottom="5dp"
            android:text="@string/condition"
            android:layout_gravity="center"
            />
        <Button
            android:layout_width="170dp"
            android:layout_height="40dp"
            android:elevation="8dp"
            android:id="@+id/submitsell"
            android:layout_marginTop="5dp"
            android:background="@color/blue"
            android:textColor="@color/white"
            android:textSize="22sp"
            android:layout_gravity="center"
            android:text="تأكيد"/>


    </LinearLayout>
</LinearLayout>
    </ScrollView>


</LinearLayout>


